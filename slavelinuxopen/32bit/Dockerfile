# Do not edit this file manually, it was generated on 2015-11-06 at 10:44 from slavelinuxopen/Dockerfile.in
 # Define an image to build the open-source 32bit CoolProp wrappers on the Linux platform
FROM coolprop/slavepython32
 # File Author / Maintainer
MAINTAINER Jorrit Wronski <jowr@ipu.dk>
 # Make sure the follwoing commands are run as root user
USER root
WORKDIR /root
 # Install system tools for compilation of Python extensions numpy-scipy-pandas-matplotlib and the source code docs.
ENV DEBIAN_FRONTEND noninteractive
RUN apt-get update -qq && apt-get install -y \
build-essential git gcc gfortran cmake python-dev p7zip cython python-matplotlib python-pandas swig octave liboctave-dev swig mono-mcs mono-runtime r-base-dev scilab julia && \
apt-get autoclean && apt-get clean && apt-get autoremove
 # Make sure the following commands are run as the buildbot user
USER buildbot
WORKDIR /home/buildbot
 # Install emscripten distribution including LLVM
RUN curl -o emscripten.tar.gz "https://s3.amazonaws.com/mozilla-games/emscripten/releases/emsdk-portable.tar.gz" && tar -xvf emscripten.tar.gz && rm emscripten.tar.gz
RUN pushd emsdk_portable && ./emsdk update && ./emsdk install clang-master-32bit && ./emsdk install emscripten-master-32bit && ./emsdk install sdk-master-32bit && popd
RUN pushd emsdk_portable && ./emsdk activate latest && echo "$PWD/emsdk activate latest" >> /home/buildbot/.bash_profile && echo "source $PWD/emsdk_env.sh" >> /home/buildbot/.bash_profile && popd
 # Some commercial wrappers are missing - Mathematica - MATLAB
