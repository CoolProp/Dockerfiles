# Do not edit this file manually, it was generated on 2015-11-08 at 23:37 from slaveopen/Dockerfile.in
 # Define an image to build the open-source 64bit CoolProp wrappers on the Linux platform
FROM coolprop/slavepython:latest
 # File Author / Maintainer
MAINTAINER Jorrit Wronski <jowr@ipu.dk>
 # Make sure the follwoing commands are run as root user
USER root
WORKDIR /root
 # Install system tools for compilation of Python extensions numpy-scipy-pandas-matplotlib and the source code docs.
RUN apt-get update -qq && DEBIAN_FRONTEND="noninteractive" apt-get install -y \
build-essential git gcc gfortran cmake python-dev p7zip-full cython python-matplotlib python-pandas swig octave liboctave-dev swig mono-mcs mono-runtime default-jdk nodejs r-base-dev scilab julia && \
DEBIAN_FRONTEND="noninteractive" apt-get autoclean && DEBIAN_FRONTEND="noninteractive" apt-get clean && DEBIAN_FRONTEND="noninteractive" apt-get autoremove
 # Fix 7zip path name
 # RUN ln -s /usr/bin/7zr /usr/bin/7z
 # Make sure the following commands are run as the buildbot user
USER buildbot
WORKDIR /home/buildbot
 # Install emscripten distribution including LLVM
RUN curl -o emscripten.tar.gz "https://s3.amazonaws.com/mozilla-games/emscripten/releases/emsdk-portable.tar.gz" && tar -xvf emscripten.tar.gz && rm emscripten.tar.gz
RUN pushd emsdk_portable && ./emsdk update && ./emsdk install clang-master-64bit && ./emsdk install emscripten-master-64bit && ./emsdk install sdk-master-64bit && ./emsdk activate latest && sed -i.bak 's/node/nodejs/g' /home/buildbot/.emscripten &&
echo "source $PWD/emsdk_env.sh" >> /home/buildbot/.bash_profile && popd
 # Install six for the SWIG Python scripts
RUN pip install six --user
 # Some commercial wrappers are missing - Mathematica - MATLAB
